<Page x:Class="DIPLOM.Pages.CustomerMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerMenu">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Меню пользователя" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,20,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Button x:Name="BuyTicketButton" Content="Купить билет" 
                    Height="40" Margin="0,0,0,20"
                    Click="BuyTicketButton_Click"/>

            <Button x:Name="ViewTicketsButton" Content="Мои билеты" 
                    Height="40" Margin="0,0,0,20"
                    Click="ViewTicketsButton_Click"/>

            <ListView x:Name="TicketsListView" Height="200" Visibility="Collapsed">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock FontWeight="Bold" Text="{Binding Flight.FlightNumber}"/>
                            <TextBlock>
                                <Run Text="{Binding DepartureAirport.City}"/>
                                <Run Text=" → "/>
                                <Run Text="{Binding ArrivalAirport.City}"/>
                            </TextBlock>
                            <TextBlock Text="{Binding Flight.DepartureTime, StringFormat='Вылет: {0:g}'}"/>
                            <TextBlock Text="{Binding Class.ClassName}"/>
                            <TextBlock Text="{Binding TotalPrice, StringFormat='Цена: {0} руб.'}"/>
                            <Button Content="Просмотреть" 
                                    Tag="{Binding BookingId}"
                                    Click="ViewTicket_Click"
                                    Margin="0,5,0,0" Padding="10,2"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button x:Name="BackButton" Content="Назад" 
                    Height="40" Visibility="Collapsed"
                    Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>