<Window x:Class="DIPLOM.Windows.AdminAddBooking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавление бронирования" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FFE6F2FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Новое бронирование" 
                   FontSize="20" FontWeight="Bold" 
                   Margin="20" HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <TextBlock Text="ID бронирования:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="BookingIdTextBox" Margin="0,0,0,20" IsReadOnly="True"/>

                <TextBlock Text="Клиент:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="UserComboBox" 
                          Margin="0,0,0,20"/>

                <TextBlock Text="Рейс:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="FlightComboBox" 
                          Margin="0,0,0,20"
                          SelectionChanged="FlightComboBox_SelectionChanged"/>

                <TextBlock Text="Класс перелета:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="ClassComboBox" 
                          Margin="0,0,0,20"
                          SelectionChanged="ClassComboBox_SelectionChanged"/>

                <TextBlock Text="Дополнительные услуги:" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel>
                    <CheckBox x:Name="BaggageCheckBox" Margin="0,0,0,5" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
                    <CheckBox x:Name="ExtraBaggageCheckBox" Margin="0,0,0,5" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
                    <CheckBox x:Name="PetInCabinCheckBox" Margin="0,0,0,5" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
                    <CheckBox x:Name="PetInHoldCheckBox" Margin="0,0,0,5" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
                    <CheckBox x:Name="InfantCheckBox" Margin="0,0,0,20" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
                </StackPanel>

                <TextBlock Text="Комментарий:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="CommentsTextBox" 
                         Height="60" 
                         TextWrapping="Wrap"
                         Margin="0,0,0,20"/>

                <TextBlock Text="Итоговая цена:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="TotalPriceTextBlock" FontSize="16" Margin="0,0,0,20" Text="0 руб."/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Content="Назад" 
                    Width="100" Height="35" 
                    Margin="0,0,20,0"
                    Click="BackButton_Click"/>

            <Button Content="Подтвердить" 
                    Width="150" Height="35"
                    Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
