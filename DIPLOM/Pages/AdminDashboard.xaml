<Page x:Class="DIPLOM.Pages.AdminDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminDashboard">

    <Grid Background="#FFE6F2FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Все бронирования" 
                      FontSize="20" FontWeight="Bold" 
                      Margin="20"/>

            <Button x:Name="AddButton" 
                    Content="+" 
                    Margin="10" Padding="10,5"
                    Click="AddBookingButton_Click" Height="53" Width="80"/>
            <Button Content="Назад" Width="150" 
                Height="35" 
                Margin="0,0,0,20"
                FontSize="14"
                Click="BackButton_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  x:Name="BookingsDataGrid" 
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding BookingId}" Width="60"/>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding Username}" Width="120"/>
                <DataGridTextColumn Header="Рейс" Binding="{Binding FlightNumber}" Width="80"/>
                <DataGridTextColumn Header="Откуда" Binding="{Binding DepartureCity}" Width="100"/>
                <DataGridTextColumn Header="Куда" Binding="{Binding ArrivalCity}" Width="100"/>
                <DataGridTextColumn Header="Вылет" Binding="{Binding DepartureTime, StringFormat=dd.MM.yy HH:mm}" Width="120"/>
                <DataGridTextColumn Header="Класс" Binding="{Binding ClassName}" Width="80"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding TotalPrice}" Width="80"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="Пассажиры" Binding="{Binding PassengersCount}" Width="80"/>
                <DataGridTextColumn Header="Дата бронирования" Binding="{Binding BookingDate, StringFormat=dd.MM.yy HH:mm}" Width="120"/>

                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Детали" 
                                    Tag="{Binding BookingId}"
                                    Click="ViewDetails_Click"
                                    Margin="2" Padding="5,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Отменить" 
                                    Tag="{Binding BookingId}"
                                    Click="CancelBooking_Click"
                                    Margin="2" Padding="5,2"
                                    Background="#FFFF6666"
                                    Foreground="White"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>