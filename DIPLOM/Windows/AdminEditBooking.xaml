<Window x:Class="DIPLOM.Windows.AdminEditBooking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DIPLOM.Windows"
        mc:Ignorable="d"
        Title="AdminEditBooking" Height="450" Width="800">
    <Grid Background="#FFE6F2FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Редактирование бронирования" 
                   FontSize="20" FontWeight="Bold" 
                   Margin="20" HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <TextBlock Text="ID бронирования:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="BookingIdTextBlock" Margin="0,0,0,20"/>

                <TextBlock Text="Клиент:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="UserComboBox" 
                          DisplayMemberPath="FirstName"
                          Margin="0,0,0,20"/>

                <TextBlock Text="Маршрут:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="FlightComboBox" 
                          DisplayMemberPath="FlightNumber"
                          Margin="0,0,0,20"/>

                <TextBlock Text="Класс перелета:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="ClassComboBox" 
                          DisplayMemberPath="ClassName"
                          Margin="0,0,0,20"/>

                <TextBlock Text="Дополнительные услуги:" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel>
                    <CheckBox x:Name="BaggageCheckBox" Content="Багаж (20 кг)" Margin="0,0,0,5"/>
                    <CheckBox x:Name="ExtraBaggageCheckBox" Content="Доп. багаж (30 кг)" Margin="0,0,0,5"/>
                    <CheckBox x:Name="PetInCabinCheckBox" Content="Питомец в салоне" Margin="0,0,0,5"/>
                    <CheckBox x:Name="PetInHoldCheckBox" Content="Питомец в багаже" Margin="0,0,0,5"/>
                    <CheckBox x:Name="InfantCheckBox" Content="Младенец" Margin="0,0,0,20"/>
                </StackPanel>

                <TextBlock Text="Комментарий:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="CommentsTextBox" 
                         Height="60" 
                         TextWrapping="Wrap"
                         Margin="0,0,0,20"/>

                <TextBlock Text="Статус:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="StatusComboBox" Margin="0,0,0,20"/>

                <TextBlock Text="Итоговая цена:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="TotalPriceTextBlock" FontSize="16" Margin="0,0,0,20"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Content="Отмена" 
                    Width="100" Height="35" 
                    Margin="0,0,20,0"
                    Click="CancelButton_Click"/>

            <Button Content="Сохранить" 
                    Width="100" Height="35"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
