<Page x:Class="DIPLOM.Pages.Tickets"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DIPLOM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tickets">

    <Grid Background="#FFF0F5F5">
        <!-- Заголовок страницы -->
        <StackPanel Margin="20">
            <TextBlock Text="Мои билеты" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#FF1E3A8A"
                       Margin="0,0,0,20"/>

            <!-- Список билетов -->
            <ListView x:Name="TicketsListView" 
                      BorderThickness="0"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="10" 
                                Background="White" 
                                BorderBrush="#FFDDDDDD" 
                                BorderThickness="1"
                                Margin="0,0,0,10"
                                Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Информация о билете -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Flight.FlightNumber}" 
                                               FontSize="18" 
                                               FontWeight="Bold"
                                               Foreground="#FF1E3A8A"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="{Binding Flight.Airports.City}" 
                                                   FontSize="16"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text=" → " 
                                                   FontSize="16"
                                                   Margin="5,0,5,0"/>
                                        <TextBlock Text="{Binding Flight.Airports1.City}" 
                                                   FontSize="16"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding Flight.DepartureTime, StringFormat='Вылет: {0:dd MMMM yyyy HH:mm}'}" 
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding Flight.ArrivalTime, StringFormat='Прилёт: {0:dd MMMM yyyy HH:mm}'}"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="Класс: "/>
                                        <TextBlock Text="{Binding ServiceClasses.ClassName}" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="Статус: "/>
                                        <TextBlock Text="{Binding Status}" 
                                                   FontWeight="SemiBold"
                                                   Foreground="{Binding StatusColor}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Цена и кнопки -->
                                <StackPanel Grid.Column="1" 
                                            VerticalAlignment="Center"
                                            Margin="20,0,0,0">
                                    <TextBlock Text="{Binding TotalPrice, StringFormat='{}{0} ₽'}" 
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#FF1E3A8A"
                                               HorizontalAlignment="Right"/>
                                    <Button Content="Детали" 
                                            Margin="0,10,0,5"
                                            Padding="10,5"
                                            Background="#FF1E3A8A"
                                            Foreground="White"
                                            BorderBrush="Transparent"
                                            Click="ViewDetails_Click"
                                            Tag="{Binding BookingId}"/>
                                    <Button Content="Удалить" 
                                            Padding="10,5"
                                            Background="#FFCC0000"
                                            Foreground="White"
                                            BorderBrush="Transparent"
                                            Click="DeleteTicket_Click"
                                            Tag="{Binding BookingId}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Кнопка возврата -->
            <Button Content="Назад" 
                    HorizontalAlignment="Left"
                    Margin="0,20,0,0"
                    Padding="15,5"
                    Background="#FF1E3A8A"
                    Foreground="White"
                    Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>